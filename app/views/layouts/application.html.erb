						<%= form_for(:session, url: '/') do |f| %>
							<%= f.label :name, class: 'head-text' %>
							<%= f.text_field :name, class: 'form-control' %>
							<%= f.label :password, class: 'head-text' %>
							<%= f.password_field :password, class: 'form-control' %>
							<%= f.submit "Login", class: "btn btn-success" %>
							<%= link_to "Sign Up", new_user_path, class: "btn btn-success" %>
						<% end %>
					</div>
					</div><!-- </form> -->
