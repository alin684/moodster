<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
<!-- Bootstrap core CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
<style>
	:root {
	  --jumbotron-padding-y: 3rem;
	}

	.jumbotron {
	  padding-top: var(--jumbotron-padding-y);
	  padding-bottom: var(--jumbotron-padding-y);
	  margin-bottom: 0;
	  background-color: #fff;
	}
	@media (min-width: 768px) {
	  .jumbotron {
	    padding-top: calc(var(--jumbotron-padding-y) * 2);
	    padding-bottom: calc(var(--jumbotron-padding-y) * 2);
	  }
	}

	.jumbotron p:last-child {
	  margin-bottom: 0;
	}

	.jumbotron-heading {
	  font-weight: 300;
	}

	.jumbotron .container {
	  max-width: 40rem;
	}

	footer {
	  padding-top: 3rem;
	  padding-bottom: 3rem;
	}

	footer p {
	  margin-bottom: .25rem;
	}

	.box-shadow { box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05); }
</style>
<br>
<br>
<div class="signup"><center><img src="http://zitrocapital.com/media/msignup2.jpg" alt="Sign Up Page Image Logo"></div></center>
<center><div class="user_dash">
<h1>Welcome <%= @user.name.capitalize %></h1>
<div class="panel panel-default"><h3>Click Below to Analyze Your Face </h3>
<%= link_to "Take Picture", cam_path, method: :get, class: "btn btn-success" %>
<br><p> </p></div>

<% if File.exist?("./app/assets/images/#{@user.id}/#{@user.features.length}.jpg") %>
	<%= image_tag("#{@user.id}/#{@user.features.length}.jpg") %>
<% end %>

<h1><%= @user.name.upcase %>'s Face Analyses</h1>

 <row><div class="userfeature"><% @user.features.each_with_index do |feat, index| %>
       <div class="col-md-4 text-center" style="padding: 1em">
         <div class="card" style="background-color:#EBF0F2; padding: 1em">
           <div class="card-body">


							 <% if File.exist?("./app/assets/images/#{@user.id}/#{index+1}.jpg") %>
							 	<%= image_tag("#{@user.id}/#{index+1}.jpg") %>
							 <% end %>


						 <h3 class="card-title">You look like you are:</h3>
             <h4 class="card-text text-center"><%= feat.gender.capitalize %></h4>

						 <h3 class="card-title">You appear to be around:</h3>
						 <h4 class="card-text text-center" style="height: 10rem"><%= feat.age %> years old</h4>

						 <h3 class="card-title">Your face is exhibiting:</h3>
						 <h4 class="card-text text-center" style="height: 10rem"><%= feat.emotions %></h4>

						 <h3 class="card-title">Makeup?:</h3>
 						<h4 class="card-text text-center" style="height: 10rem"><%= feat.makeup %></h4>

						<h3 class="card-title">Glasses?:</h3>
						<h4 class="card-text text-center" style="height: 10rem"><%= feat.glasses %></h4>

						<h3 class="card-title">Facial hair?:</h3>
						<h4 class="card-text text-center" style="height: 10rem"><%= feat.facialHair %></h4>

						<h3 class="card-title">We believe you are wearing:</h3>
						<h4 class="card-text text-center" style="height: 10rem"><%= feat.accessories %></h4>

           </div>
         </div>
       </div>
     <% end %>
	 </div></row>

<a name="why_do_you_hate_us"></a>
<h4>Are You Sure? If You Are Just Press The Button Below To Delete Your Account</h4>
	<p><%= button_to "Delete Profile", @user, :method => :delete, class: "btn btn-danger"%></p><br>

</div></center>
